<Button>
    size_hint: (0.2, 0.2)
    background_normal: ''
    background_color: (2/255, 10/255, 24/255, 1)

<MyRoot>

    calc_field: calc_field

    BoxLayout
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: calc_field
            text: "0"
            font_size: 28
            multiline: False
            halign: "right"
            size_hint: (1, 0.19)
            background_color: (2/255, 10/255, 24/255, 1)
            foreground_color: (1, 1, 1, 1)

        GridLayout:
            cols: 4
            rows: 5

            ### Row 1 ###
            Button:
                text: "C"
                font_size: 28
                on_press: root.clear()

            Button:
                text: "DEL"
                font_size: 26
                on_press: root.delete()

            Button:
                text: "x²"
                font_size: 28
                on_press: root.square()

            Button:
                text: "÷"
                font_size: 28
                background_color: (64/255, 176/255, 100/255, 1)
                on_press: root.calc_symbol('/')

            #### Row 2 #####
            Button:
                text: "7"
                font_size: 28
                on_press: root.calc_symbol('7')

            Button:
                text: "8"
                font_size: 28
                on_press: root.calc_symbol('8')

            Button:
                text: "9"
                font_size: 28
                on_press: root.calc_symbol('9')

            Button:
                text: "x"
                font_size: 28
                background_color: (64/255, 176/255, 100/255, 1)
                on_press: root.calc_symbol('*')

            #### Row 3 ###
            Button:
                text: "4"
                font_size: 28
                on_press: root.calc_symbol('4')

            Button:
                text: "5"
                font_size: 28
                on_press: root.calc_symbol('5')

            Button:
                text: "6"
                font_size: 28
                on_press: root.calc_symbol('6')

            Button:
                text: "-"
                font_size: 30
                background_color: (64/255, 176/255, 100/255, 1)
                on_press: root.calc_symbol('-')

            ### Row 4 ###
            Button:
                text: "1"
                font_size: 28
                on_press: root.calc_symbol('1')

            Button:
                text: "2"
                font_size: 28
                on_press: root.calc_symbol('2')

            Button:
                text: "3"
                font_size: 28
                on_press: root.calc_symbol('3')

            Button:
                text: "+"
                font_size: 28
                background_color: (64/255, 176/255, 100/255, 1)
                on_press: root.calc_symbol('+')

            ### Row 5 ###
            Button:
                text: "+/-"
                font_size: 28
                on_press: root.positive_negative()

            Button:
                text: "0"
                font_size: 28
                on_press: root.calc_symbol('0')

            Button:
                text: "."
                font_size: 28
                on_press: root.calc_symbol('.')

            Button:
                text: "="
                font_size: 28
                background_color: (64/255, 176/255, 100/255, 1)
                on_press: root.get_result()